<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ player.nickname }}</title>
    {% include 'commonHeader.twig' %}
</head>
<body>
{% include 'navbar.twig' %}
{% import 'macro/playerMacro.twig' as pm %}

<div class="container">
    {% include 'playerHeader.twig' %}
    <div class="row my-row">
        <div class="col-sm-12">
            {% if atMatches %}
                {% include 'atMatchesTable.twig' %}
            {% else %}
                <h1>Некомандный игрок!</h1>
            {% endif %}
        </div>
    </div>
</div>
<script>
    $(document).ready(() => {
        const atEl = $('#at-select');
        initCheckAtStatsUrl(atEl.val());
        atEl.change(() => {
            initCheckAtStatsUrl(atEl.val());
        });
    });

    function initCheckAtStatsUrl(ally) {
        const link = $('#check-at-pair-stats');
        const initUrl = link.data('init-href');
        link.attr('href', `${initUrl}${ally}`);
    }
</script>
</body>
</html>